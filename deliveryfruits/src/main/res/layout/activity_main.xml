<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.deliveryapp.deliveryfruits.MainActivity">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteY="5dp" app:expanded="true">
        <android.support.v7.widget.Toolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="enterAlwaysCollapsed|snap" android:background="@color/colorPrimary1"
                android:id="@+id/tool_bar">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_call"
            android:id="@+id/call_button"
            app:rippleColor="?attr/colorControlNormal"
            app:backgroundTint="@color/colorAccent" app:fabSize="mini" android:focusable="true"
            app:layout_anchor="@id/tool_bar" app:layout_anchorGravity="top|right"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@drawable/shop_basket"
            android:id="@+id/basket_button"
            android:focusable="true" app:fabSize="mini" app:backgroundTint="@color/colorPrimary222"
            app:rippleColor="?attr/colorBackgroundFloating"
            app:layout_anchor="@+id/tool_bar" app:layout_anchorGravity="top|left" android:visibility="visible"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/nestedScrollView">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:overScrollMode="always"
        >
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:clipToPadding="true"
                    app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/constr_layout">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="160dp"
                                android:layout_height="190dp" android:id="@+id/layout"
                                app:layout_constraintStart_toStartOf="@+id/img1"
                                app:layout_constraintTop_toTopOf="@+id/img1" android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toEndOf="@+id/img1">
                        </LinearLayout>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img4"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/img2"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img5"
                                app:layout_constraintTop_toBottomOf="@+id/img3" android:layout_marginTop="100dp"
                                app:layout_constraintEnd_toStartOf="@+id/img6" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginLeft="48dp" android:layout_marginRight="25dp"/>
                        <ImageButton
                                android:layout_width="160dip"
                                android:layout_height="170dip" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img1"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
                                android:tint="@android:color/black"
                                android:layout_marginLeft="35dp"/>
                        <EditText
                                android:layout_width="77dp"
                                android:layout_height="43dp"
                                android:inputType="numberSigned"
                                android:ems="10"
                                android:id="@+id/text1"
                                android:hint="@string/_1"
                                android:singleLine="false"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:text="@string/_1"
                                style="@style/Widget.AppCompat.Button.Colored"
                                tools:ignore="SmallSp"
                                android:textColorLink="@color/colorPrimary222"
                                android:selectAllOnFocus="false"
                                app:layout_constraintTop_toBottomOf="@+id/img1"
                                app:layout_constraintBottom_toBottomOf="@+id/layout"
                                app:layout_constraintStart_toEndOf="@+id/minus1" android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img6"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/img4"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="160dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img2"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="34dp"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
                                android:layout_marginRight="35dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/img3"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/img1"
                                android:layout_marginLeft="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton6"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/img5"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginRight="25dp" android:layout_marginLeft="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/img6"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton8"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton6"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton9" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginRight="25dp" android:layout_marginLeft="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton9"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="30dp"
                                android:id="@+id/plus_2"
                                tools:layout_marginRight="10dp"
                                tools:layout_marginEnd="10dp"
                                app:srcCompat="@drawable/plus"
                                android:background="@color/colorPrimaryDark22"
                                app:layout_constraintBottom_toBottomOf="@+id/text1"
                                android:layout_marginBottom="6dp"
                                app:layout_constraintTop_toTopOf="@+id/text1" android:layout_marginTop="6dp"
                                app:layout_constraintVertical_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/text1" android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"/>
                        <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="30dp" android:id="@+id/minus1"
                                style="@style/Widget.AppCompat.ImageButton"
                                android:background="@color/colorPrimaryDark22"
                                app:layout_constraintTop_toTopOf="@+id/text1"
                                app:srcCompat="@drawable/ic_action_name"
                                app:layout_constraintStart_toStartOf="@+id/layout"
                                android:layout_marginTop="6dp"
                                app:layout_constraintBottom_toBottomOf="@+id/text1"
                                android:layout_marginBottom="6dp"
                                app:layout_constraintVertical_bias="0.0"
                                android:layout_marginStart="5dp" android:layout_marginLeft="5dp"/>
                        <Button
                                android:text="@string/to_basket"
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:id="@+id/button"
                                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                                android:background="@color/colorPrimary2"
                                app:layout_constraintTop_toBottomOf="@+id/text1"
                                app:layout_constraintEnd_toEndOf="@+id/layout"
                                app:layout_constraintStart_toStartOf="@+id/layout"
                                android:textColor="@android:color/black" android:textSize="10sp"
                        />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
