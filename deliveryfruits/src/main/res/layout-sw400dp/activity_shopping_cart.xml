<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.deliveryapp.deliveryfruits.ShoppingCartActivity">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppBarOverlay" android:fitsSystemWindows="true" app:expanded="true">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_call"
            android:id="@+id/call_button"
            app:rippleColor="?attr/colorControlNormal"
            app:backgroundTint="@color/colorAccent" app:fabSize="mini" android:focusable="true"
            app:layout_anchor="@id/toolbar" app:layout_anchorGravity="top|left"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@drawable/shop_basket"
            android:id="@+id/basket_button"
            android:focusable="true" app:fabSize="mini" app:backgroundTint="@color/colorPrimary222"
            app:rippleColor="?attr/colorBackgroundFloating"
            app:layout_anchor="@+id/toolbar" app:layout_anchorGravity="top|right" android:visibility="visible"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" style="@android:style/Widget.DeviceDefault.Light.ScrollView"
            android:fillViewport="true" android:clipToPadding="true" android:layout_marginTop="57dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="70dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" android:background="@color/colorPrimary22132">
                <TextView
                        android:text="Американо"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="24sp"
                        app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" android:typeface="sans"/>
                <ImageView
                        android:layout_width="141dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/americano1"
                        android:id="@+id/imageView" android:paddingLeft="5dp"
                        android:cropToPadding="true" android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:text="Количество:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8" app:layout_constraintEnd_toStartOf="@+id/textView9"
                        android:layout_marginEnd="30dp" android:layout_marginRight="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"/>
                <TextView
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"
                        android:typeface="sans" app:layout_constraintEnd_toStartOf="@+id/imageView"
                        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                        android:textStyle="bold"/>
                <TextView
                        android:text="Сумма:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"
                        android:typeface="serif" app:layout_constraintEnd_toStartOf="@+id/textView11"
                        android:layout_marginEnd="38dp" android:layout_marginRight="38dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"/>
                <TextView
                        android:text="@string/_10_lei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="18sp"
                        android:typeface="normal" app:layout_constraintEnd_toEndOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="@+id/textView10" android:textStyle="bold"/>
                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp" app:srcCompat="@android:drawable/btn_dialog"
                        android:id="@+id/imageButton2" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp" style="@style/Widget.AppCompat.ImageButton"
                        android:background="@color/colorPrimary22132" android:scaleType="fitCenter"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                    android:text="@string/_001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:visibility="visible" android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" android:textStyle="bold|italic"/>
            <TextView
                    android:text="Сумма: 10 лей"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="18sp" android:textStyle="bold|italic"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
