<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteY="5dp" app:expanded="true">
        <android.support.v7.widget.Toolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways" android:background="@color/colorPrimary1"
                android:id="@+id/tool_bar">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_call"
            android:id="@+id/call_button"
            app:rippleColor="?attr/colorControlNormal"
            app:backgroundTint="@color/colorAccent" app:fabSize="mini" android:focusable="true"
            app:layout_anchor="@id/tool_bar" app:layout_anchorGravity="top|right"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true" app:srcCompat="@drawable/shop_basket"
            android:id="@+id/basket_button"
            android:focusable="true" app:fabSize="mini" app:backgroundTint="@color/colorPrimary222"
            app:rippleColor="?attr/colorBackgroundFloating"
            app:layout_anchor="@+id/tool_bar" app:layout_anchorGravity="top|left" android:visibility="visible"/>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/nestedScrollView">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:overScrollMode="always"
        >
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:clipToPadding="true"
                    app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </RelativeLayout>
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/constr_layout"
                            android:clickable="true" android:fitsSystemWindows="true" android:focusedByDefault="true">
                        <ImageButton
                                android:layout_width="46dp"
                                android:layout_height="43dp" app:srcCompat="@drawable/plus"
                                android:id="@+id/plus"
                                app:layout_constraintStart_toEndOf="@+id/editText2"
                                style="@style/Widget.AppCompat.ImageButton"
                                android:tint="@android:color/black" android:backgroundTint="@color/colorPrimary1"
                                android:barrierAllowsGoneWidgets="?android:attr/windowOverscan" tools:clickable="true"
                                android:contextClickable="true" android:baselineAlignBottom="true"
                                android:defaultFocusHighlightEnabled="true" android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                app:layout_constraintTop_toTopOf="@+id/imageButton4" android:layout_marginTop="156dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton5"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageButton1"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton7"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton3" android:layout_marginTop="100dp"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton2" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginLeft="48dp" android:layout_marginRight="25dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton4"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:tint="@android:color/black"/>
                        <EditText
                                android:layout_width="46dp"
                                android:layout_height="43dp"
                                android:inputType="numberSigned"
                                android:ems="10"
                                android:id="@+id/editText2" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/imageButton4"
                                android:layout_marginTop="156dp"
                                android:hint="@string/_1"
                                android:singleLine="true"
                                app:layout_constraintLeft_toLeftOf="parent"
                                android:layout_marginStart="96dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                                android:textAlignment="center" android:textColor="@android:color/black"
                                android:lineSpacingExtra="10sp" android:text="1"
                                style="@style/Widget.AppCompat.Button.Colored"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton2"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageButton5"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton1"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="34dp"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton3"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton5" android:layout_marginEnd="25dp"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton4"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton6"
                                android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageButton7"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginRight="25dp" android:layout_marginLeft="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton2"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton8"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton6"
                                app:layout_constraintEnd_toStartOf="@+id/imageButton9" android:layout_marginEnd="25dp"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
                                android:layout_marginRight="25dp" android:layout_marginLeft="48dp"/>
                        <ImageButton
                                android:layout_width="142dp"
                                android:layout_height="200dp" app:srcCompat="@android:drawable/alert_dark_frame"
                                android:id="@+id/imageButton9"
                                android:layout_marginTop="100dp"
                                app:layout_constraintTop_toBottomOf="@+id/imageButton"
                                android:layout_marginEnd="48dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="48dp"/>
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </ScrollView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
