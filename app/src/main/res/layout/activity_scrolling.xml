<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.deliveryapp.deliapp.ScrollingActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:layout_width="157dp"
                android:layout_height="52dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editText3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="240dp"
        />
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton8"
                android:layout_marginLeft="52dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="260dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton7"
                android:layout_marginLeft="220dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="260dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <EditText
                android:layout_width="145dp"
                android:layout_height="47dp"
                android:id="@+id/text4"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
                app:layout_constraintTop_toTopOf="@+id/imageButton3" android:layout_marginTop="136dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="true" android:textStyle="normal"
                android:focusable="true" android:textColorLink="@android:color/background_dark"
                android:selectAllOnFocus="true" android:inputType="number"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton5"
                android:layout_marginLeft="52dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton6"
                android:layout_marginLeft="52dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton2"
                android:layout_marginLeft="52dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text4"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton1"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="216dp"
                android:layout_marginLeft="216dp"
                app:layout_constraintLeft_toLeftOf="parent" android:layout_marginEnd="52dp"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton3"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:layout_marginLeft="52dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageButton
                android:layout_width="148dp"
                android:layout_height="192dp" app:srcCompat="@android:drawable/alert_dark_frame"
                android:id="@+id/imageButton4"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
